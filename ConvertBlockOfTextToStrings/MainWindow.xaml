<Window x:Class="ConvertBlockOfTextToStrings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvertBlockOfTextToStrings"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Height="186" Margin="20,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" TextChanged="textBox_TextChanged" AcceptsReturn="True"/>
        <TextBox x:Name="outputTextBox" HorizontalAlignment="Left" Height="186" Margin="273,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" AcceptsReturn="True"/>
        <Button x:Name="button" Content="Go" HorizontalAlignment="Left" Margin="215,255,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Label x:Name="label" Content="Input" HorizontalAlignment="Left" Margin="20,13,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
